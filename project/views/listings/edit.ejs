<% layout("/layouts/boilerplate.ejs") %> 
<body>
    <div class="container">
        <h2>Edit Listing</h2>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="form-card">
            <input type="text" placeholder="Enter title" name="title" class="input" value="<%= listing.title %>">
            <input type="text" placeholder="Enter price" name="price" class="input" value="<%= listing.price %>">
            <input type="text" placeholder="Enter location" name="location" class="input"
                value="<%= listing.location %>">
            <input type="text" placeholder="Enter country" name="country" class="input" value="<%= listing.country %>">
            <input type="text" placeholder="Update Image URL (optional)" name="image" class="input">
            <textarea name="description" placeholder="Enter description"
                class="textarea"><%= listing.description %></textarea>
            <button type="submit" class="btn">Save Changes</button>
        </form>
    </div>
</body>